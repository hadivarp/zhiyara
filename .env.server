# WordPress Environment Configuration for Server Integration
# Copy this to .env and update with your actual values

# WordPress Database Configuration
WP_DB_NAME=zhiyara_wp
WP_DB_USER=wp_user
WP_DB_PASSWORD=your_secure_wp_password_here
WP_TABLE_PREFIX=wp_

# WordPress Database Root Password
WP_DB_ROOT_PASSWORD=your_secure_root_password_here

# WordPress Debug (set to false for production)
WP_DEBUG=false

# Domain Configuration
DOMAIN=zhiyara.com
WORDPRESS_DOMAIN=zhiyara.com
WORDPRESS_CONFIG_EXTRA=define('WP_HOME','http://zhiyara.com:8080'); define('WP_SITEURL','http://zhiyara.com:8080');
CRM_DOMAIN=65.109.219.107:4000

# Server IP (for reference)
SERVER_IP=65.109.219.107

# Redis Configuration (uses existing Redis from Rails setup)
REDIS_PASSWORD=

# SSL Configuration (set to true when SSL is configured)
SSL_ENABLED=false
